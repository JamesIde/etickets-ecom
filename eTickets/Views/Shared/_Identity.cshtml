@inject UserManager<ApplicationUser> userManager

@if (!User.Identity.IsAuthenticated)
{
    <a class="btn btn-outline-success my-2 my-sm-0 mr-2" asp-controller="Account" asp-action="Login">
        <i class="bi bi-box-arrow-in-right"></i>
        Login
    </a>

    <a class="btn btn-outline-primary my-2 my-sm-0 mr-2" asp-controller="Account" asp-action="Signup">
        <i class="bi bi-person-plus"></i>
        Signup
    </a>
}
else
{
    //Drop down 
    <div class="dropdown" style="padding-right:5px">
    <button class="btn btn-outline-success dropdown-toggle" type="button" id="profile-btn" data-toggle="dropdown" aria-expanded="false">
        <i class="bi bi-person-badge"></i>Hello, @userManager.GetUserName(User)
    </button>
    <ul class="dropdown-menu" aria-labelledby="profile-btn">
        <li>
            <a class="dropdown-item" asp-controller="Orders" asp-action="ListOrders"><i class="bi bi-list"></i>Orders</a>
        </li>
        <li>
                @if (User.IsInRole("Admin")) 
                {
            <a class="dropdown-item" asp-controller="Account" asp-action="ListUsers"><i class="bi bi-people"></i>Users</a>
            }
        </li>
    </ul>
</div>
<span class="padding:5px"></span>
<form asp-controller="Account" asp-action="Logout" class="">
    <button class="btn btn-outline-danger my-2 my-sm-0">
        <i class="bi bi-box-arrow-in-right"> Logout</i>
    </button>
</form>

}



